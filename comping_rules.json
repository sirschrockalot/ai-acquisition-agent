{
  "version": "1.0.0",
  "updated_at": "2025-08-22",
  "currency": "USD",
  "units": {
    "distance": "miles",
    "gla": "sqft"
  },
  "rules": {
    "distance": {
      "urban_suburban_max": 1.0,
      "rural_max": 10.0,
      "condo_preference": "same_complex_or_within_1_mile",
      "allow_exceed_with_justification": true
    },
    "recency_months": {
      "preferred_max": 6,
      "absolute_max": 12,
      "allow_exceed_with_justification": false
    },
    "property_type": {
      "must_match": true,
      "allowed_types": [
        "single_family",
        "condo",
        "townhouse",
        "manufactured_mobile"
      ],
      "mixing_allowed_if_no_alternatives": true,
      "mixing_requires_justification": true
    },
    "size_layout": {
      "gla_percent_range": {
        "min": -0.2,
        "max": 0.2
      },
      "bed_bath_similarity": "similar_counts_preferred_adjust_if_needed",
      "style_similarity": "avoid_drastic_differences_ranch_vs_colonial_unless_justified"
    },
    "lot_location": {
      "lot_size_percent_range": {
        "min": -0.25,
        "max": 0.25
      },
      "avoid_boundaries": [
        "different_school_district",
        "different_neighborhood",
        "across_major_highway",
        "different_zip_code",
        "different_city_limits",
        "different_county"
      ],
      "boundary_crossing_requires_justification": true,
      "location_penalties": {
        "different_school_district": 0.05,
        "different_neighborhood": 0.03,
        "across_major_highway": 0.08,
        "different_zip_code": 0.02,
        "different_city_limits": 0.04,
        "different_county": 0.10
      }
    },
    "condition_quality": {
      "match_condition_preferred": true,
      "condition_scale": [
        "poor",
        "fair",
        "average",
        "renovated",
        "like_new"
      ],
      "if_different_apply_market_adjustment": true,
      "wholesaling_preferences": {
        "prefer_similar_condition": true,
        "avoid_renovated_comps_for_distressed_subject": true,
        "condition_adjustment_multiplier": 1.2,
        "distressed_property_bonus": 0.85
      },
      "advanced_validation": {
        "arm_length_transaction_check": true,
        "short_sale_exclusion": true,
        "cash_transaction_preference": true,
        "seller_concession_adjustment": true,
        "property_condition_changes": true
      }
    },
    "adjustments": {
      "bedroom": {
        "min": 5000,
        "max": 15000
      },
      "bathroom": {
        "min": 10000,
        "max": 25000
      },
      "gla_per_sqft": {
        "min": 30,
        "max": 60
      },
      "garage_space": {
        "min": 5000,
        "max": 15000
      },
          "renovation_condition": {
      "typical_range_min": 20000,
      "typical_range_max": 50000,
      "market_dependent": true
    },
    "repair_cost_estimation": {
      "condition_based_ranges": {
        "poor": {"min": 40, "max": 80, "unit": "per_sqft"},
        "fair": {"min": 25, "max": 50, "unit": "per_sqft"},
        "average": {"min": 15, "max": 35, "unit": "per_sqft"},
        "renovated": {"min": 5, "max": 15, "unit": "per_sqft"},
        "like_new": {"min": 0, "max": 10, "unit": "per_sqft"}
      },
      "market_specific_adjustments": true,
      "inflation_factor": 1.15,
      "photo_analysis_enabled": true,
      "photo_confidence_threshold": 0.8,
      "fallback_methods": ["condition_based", "photo_inferred", "user_provided"]
    },
      "basement_finished_space": {
        "market_dependent": true
      }
    },
    "adjustment_limits": {
      "single_item_pct_of_sale_price_max": 0.15,
      "net_total_pct_max": 0.25,
      "gross_total_pct_max": 0.15
    },
    "required_comps": {
      "closed_sales_min": 3,
      "active_or_pending_recommended": {
        "min": 1,
        "max": 2
      }
    },
    "wholesaling_optimization": {
      "margin_focused_selection": true,
      "prefer_lower_comps": true,
      "avoid_renovated_comps": true,
      "focus_on_distressed": true,
      "target_minimum_margin": 0.25,
      "preferred_margin": 0.35,
      "comp_quality_threshold": 0.6,
      "max_condition_difference": 2,
      "prefer_arm_length_transactions": true,
      "exclude_short_sales": true,
      "prefer_cash_transactions": true
    },
    "arv_calculation": {
      "method": "wholesaling_weighted_median",
      "weights": {
        "lowest_comp": 0.40,
        "median_comp": 0.35,
        "highest_comp": 0.25
      },
      "margin_safety_factor": 0.95
    },
    "location_intelligence": {
      "micro_market_analysis": true,
      "school_district_impact": {
        "enabled": true,
        "adjustment_range": {"min": -0.10, "max": 0.15}
      },
      "neighborhood_boundaries": {
        "strict_enforcement": true,
        "cross_boundary_penalty": 0.05
      },
      "market_trends": {
        "include_90_day_trends": true,
        "trend_adjustment_factor": 0.02,
        "seasonal_adjustments": true,
        "trend_confidence_threshold": 0.75,
        "trend_reversal_detection": true,
        "momentum_analysis": true,
        "volatility_tracking": true
      },
      "zip_code_analysis": {
        "enabled": true,
        "market_health_score": true,
        "inventory_levels": true,
        "days_on_market_trends": true
      }
    },
    "wholesaling_specific_rules": {
      "comp_selection": {
        "prefer_arm_length_transactions": true,
        "exclude_bank_owned": false,
        "exclude_short_sales": true,
        "prefer_cash_transactions": true,
        "exclude_auction_sales": true,
        "exclude_estate_sales": true
      },
      "margin_optimization": {
        "target_minimum_margin": 0.25,
        "preferred_margin": 0.35,
        "arv_confidence_interval": 0.90,
        "comp_quality_threshold": 0.7,
        "max_adjustment_percentage": 0.20
      },
      "market_conditions": {
        "hot_market_adjustment": 0.98,
        "cold_market_adjustment": 1.02,
        "stable_market_adjustment": 1.00,
        "market_condition_detection": true
      }
    },
    "advanced_analytics": {
      "margin_tracking": {
        "enabled": true,
        "target_minimum_margin": 0.25,
        "preferred_margin": 0.35,
        "margin_confidence_interval": 0.90,
        "track_historical_performance": true,
        "margin_optimization_alerts": true
      },
      "performance_metrics": {
        "comp_quality_tracking": true,
        "arv_accuracy_tracking": true,
        "repair_cost_accuracy": true,
        "deal_velocity_tracking": true,
        "market_trend_analysis": true
      },
      "market_intelligence": {
        "real_time_market_data": true,
        "trend_analysis_window": 90,
        "seasonal_pattern_recognition": true,
        "market_cycle_detection": true,
        "competitor_analysis": true
      },
      "reporting_dashboards": {
        "margin_performance": true,
        "comp_quality_metrics": true,
        "market_trends": true,
        "deal_pipeline": true,
        "roi_analysis": true
      }
    }
  },
  "selection_scoring": {
    "weights": {
      "distance": 0.20,
      "recency": 0.20,
      "gla_similarity": 0.15,
      "condition_similarity": 0.25,
      "location_boundary": 0.10,
      "property_type_match": 0.05,
      "style_match": 0.03,
      "wholesale_potential": 0.02
    },
    "normalize": true,
    "notes": "Enhanced weights prioritizing condition similarity for wholesaling margins. Use weighted score to rank candidate comps before adjustments."
  },
  "constraints": {
    "min_candidate_pool": 10,
    "fallback": {
      "expand_recency_to_months": 12,
      "expand_distance_miles": 3,
      "allow_style_mismatch_with_justification": true
    }
  },
  "output_format": {
    "subject_required_fields": [
      "address",
      "lat",
      "lon",
      "property_type",
      "gla_sqft",
      "beds",
      "baths",
      "lot_sqft",
      "condition",
      "year_built",
      "notes"
    ],
    "comp_required_fields": [
      "mls_id",
      "address",
      "sale_date",
      "sale_price",
      "distance_miles",
      "gla_sqft",
      "beds",
      "baths",
      "lot_sqft",
      "condition",
      "adjustments",
      "adjusted_price",
      "net_pct",
      "gross_pct",
      "justification"
    ],
    "justification_required_when": [
      "distance_exceeds_urban_suburban_max",
      "recency_over_preferred",
      "property_type_mismatch",
      "lot_or_gla_outside_range",
      "boundary_crossed",
      "any_limit_exceeded"
    ]
  },
  "prompts": {
    "system": "You are a wholesaling-focused residential real estate valuation assistant that prioritizes condition similarity and conservative ARV estimates for maximum margins.",
    "instructions": [
      "Prioritize condition similarity above all other factors for accurate valuations.",
      "Select the most similar condition, most recent, and nearest comps first.",
      "Do not exceed adjustment limits (15% single, 25% net, 15% gross).",
      "Provide concise justification whenever a rule is bent.",
      "Include at least 3 closed sales and 1 active/pending if available.",
      "Focus on comps that support conservative ARV estimates for wholesaling."
    ],
    "failure_modes": [
      "If no comps meet distance and recency, expand per constraints.fallback and state why.",
      "If condition similarity cannot be maintained, provide detailed justification for comp selection."
    ]
  }
}